{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
       "type": "string"
      },
      "api-version": {
       "type": "string"
      },
      "svclocation": {
       "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
       "name": "[parameters('imageTemplateName')]",
       "type": "Microsoft.VirtualMachineImages/imageTemplates",
       "apiVersion": "[parameters('api-version')]",
       "location": "[parameters('svclocation')]",
       "dependsOn": [],
       "tags": {
         "imagebuilderTemplate": "win11multi",
         "userIdentity": "enabled"
       },
       "identity": {
         "type": "UserAssigned",
         "userAssignedIdentities": {
          "/subscriptions/cfa014c2-6565-444f-8241-b3edd39a2a44/resourcegroups/rg-devbox-eus-dev/providers/Microsoft.ManagedIdentity/userAssignedIdentities/aibIdentity1711659413": {}
         }
       },
       "properties": {
         "buildTimeoutInMinutes": 100,
         "vmProfile": {
          "vmSize": "Standard_DS4_v2",
          "osDiskSizeGB": 127
         },
       "source": {
          "type": "PlatformImage",
          "publisher": "MicrosoftWindowsDesktop",
          "offer": "Windows-11",
          "sku": "win11-21h2-avd",
          "version": "latest"
       },
         "customize": [
          {
             "type": "PowerShell",
             "name": "Install Choco and Vscode",
             "inline": [
                "Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))",
                "choco install -y vscode",
                "choco install -y git"
             ]
          },
          {
            "type": "PowerShell",
            "name": "Clone repo",
            "inline": [
               "git clone https://github.com/jordanbean-msft/secret-scanning.git C:/source/repos/secret-scanning"
            ]
          }
         ],
          "distribute": 
          [
             {   
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/cfa014c2-6565-444f-8241-b3edd39a2a44/resourceGroups/rg-devbox-eus-dev/providers/Microsoft.Compute/galleries/devboxGallery/images/vscodeImageDef",
                "runOutputName": "aibCustWinManImg01",
                "artifactTags": {
                   "source": "azureVmImageBuilder",
                   "baseosimg": "win11multi"
                },
                "replicationRegions": [
                  "eastus"
                ]
             }
          ]
       }
      }
    ]
   }















